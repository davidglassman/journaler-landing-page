---
import { Icon } from 'astro-icon/components';

interface Props {
  icon: string;
  title: string;
  text: string;
}

const { icon, title, text } = Astro.props;
---

<div
  class="group border-border bg-card hover:border-primary flex flex-col items-start justify-start rounded-xl border p-5 transition-all duration-200 hover:-translate-y-0.5 hover:shadow-md sm:p-6 md:p-8"
>
  <div class="bg-primary/10 flex h-12 w-12 items-center justify-center rounded-lg">
    <Icon
      name={icon}
      class="text-primary size-6"
    />
  </div>

  <h3 class="text-foreground mt-4 text-lg font-semibold sm:mt-5 sm:text-xl">{title}</h3>

  <p class="text-muted-foreground mt-2 text-sm leading-relaxed sm:text-base">{text}</p>
</div>
