---
import { Icon } from 'astro-icon/components';

interface Props {
  icon: string;
  title: string;
  text: string;
}

const { icon, title, text } = Astro.props;
---

<div
  class="group flex flex-col items-start justify-start rounded-xl border border-border bg-card p-5 transition-all duration-200 hover:-translate-y-0.5 hover:border-primary hover:shadow-md sm:p-6 md:p-8">
  <div class="bg-primary/10 flex h-12 w-12 items-center justify-center rounded-lg">
    <Icon
      name={icon}
      class="text-primary size-6"
    />
  </div>

  <h3 class="mt-4 text-lg font-semibold text-foreground sm:mt-5 sm:text-xl">{title}</h3>

  <p class="mt-2 text-sm leading-relaxed text-muted-foreground sm:text-base">{text}</p>
</div>
