---
import { Icon } from 'astro-icon/components';

interface Props {
  icon: string;
  title: string;
  text: string;
}

const { icon, title, text } = Astro.props;
---

<div
  class="hover:border-primary flex flex-col items-start justify-start rounded-lg border border-neutral-200 p-8 transition-all delay-50 hover:-translate-y-1 hover:shadow-lg hover:shadow-neutral-300/75 dark:border-neutral-800 dark:bg-neutral-900 dark:hover:shadow-none">
  <div class="bg-primary/10 mb-4 flex flex-col items-center justify-center rounded-lg p-3">
    <Icon
      name={icon}
      class="text-primary size-6"
    />
  </div>

  <h2 class="mb-2 text-lg font-bold text-neutral-800 dark:text-neutral-300">{title}</h2>

  <p class="text-neutral-500 dark:text-neutral-400">{text}</p>
</div>
