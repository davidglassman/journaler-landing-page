---
import { Icon } from 'astro-icon/components';

interface Props {
  icon: string;
  title: string;
  text: string;
}

const { icon, title, text } = Astro.props;
---

<div
  class="group flex flex-col items-start justify-start rounded-xl border border-border bg-card p-8 transition-all duration-200 hover:-translate-y-0.5 hover:border-primary hover:shadow-md">
  <div class="bg-primary/10 flex h-12 w-12 items-center justify-center rounded-lg">
    <Icon
      name={icon}
      class="text-primary size-6"
    />
  </div>

  <h3 class="mt-5 text-xl font-semibold text-foreground">{title}</h3>

  <p class="mt-2 text-base leading-relaxed text-muted-foreground">{text}</p>
</div>
