---
import { Button } from '@/components/ui/button';
import ThemeSelector from '@/components/ThemeSelector.vue';
import { Icon } from 'astro-icon/components';
---

<header
  id="navbar"
  class="bg-background/80 fixed top-0 z-50 flex w-full justify-center border-b border-transparent backdrop-blur-lg transition-colors duration-200"
>
  <div
    class="flex w-full max-w-[70rem] flex-row items-center justify-between px-4 py-4 sm:px-6 lg:px-0"
  >
    <a
      href="#"
      class="flex flex-row items-center gap-2"
    >
      <img
        src="/favicon.png"
        alt="Journaler"
        class="size-6"
      />
      <span class="text-xl font-semibold">Journaler</span>
    </a>

    <div class="flex flex-row items-center justify-end gap-8">
      <a
        href="#features"
        class="text-foreground/80 hover:text-foreground text-base font-medium transition-colors"
      >
        Features
      </a>

      <a
        href="https://www.github.com/davidglassman/journaler-private"
        target="_blank"
        rel="noopener noreferrer"
        class="text-foreground/80 hover:text-foreground text-base font-medium transition-colors"
      >
        GitHub
      </a>

      <ThemeSelector client:only="vue" />
    </div>
  </div>
</header>

<script>
  const navbar = document.getElementById('navbar');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  function updateNavbarBorder() {
    if (window.scrollY > 0) {
      navbar?.classList.remove('border-transparent');
      navbar?.classList.add('border-neutral-200', 'dark:border-neutral-800');
    } else {
      navbar?.classList.remove('border-neutral-200', 'dark:border-neutral-800');
      navbar?.classList.add('border-transparent');
    }
  }

  function toggleMobileMenu() {
    const isOpen = mobileMenu?.classList.contains('flex');
    if (isOpen) {
      mobileMenu?.classList.remove('flex');
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    } else {
      mobileMenu?.classList.remove('hidden');
      mobileMenu?.classList.add('flex');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
    }
  }

  function closeMobileMenu() {
    mobileMenu?.classList.remove('flex');
    mobileMenu?.classList.add('hidden');
    menuIcon?.classList.remove('hidden');
    closeIcon?.classList.add('hidden');
  }

  updateNavbarBorder();
  window.addEventListener('scroll', updateNavbarBorder);
  mobileMenuBtn?.addEventListener('click', toggleMobileMenu);

  // Close menu when clicking on a link
  mobileMenu?.querySelectorAll('a').forEach((link) => {
    link.addEventListener('click', closeMobileMenu);
  });
</script>
