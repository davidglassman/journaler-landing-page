---
import { Button } from '@/components/ui/button';
import { Icon } from 'astro-icon/components';
---

<div class="flex w-full max-w-[70rem] flex-col items-center justify-start px-6 lg:px-8">
  <!-- Badge -->
  <div
    class="bg-primary/10 text-primary mb-6 rounded-full px-4 py-2 text-center text-xs font-medium tracking-wider uppercase"
  >
    Free & Open Source
  </div>

  <!-- Header -->
  <h1
    class="text-foreground text-center text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl lg:text-[64px] lg:leading-[1.1]"
  >
    Where Your Days Go
  </h1>

  <!-- Description -->
  <p
    class="text-muted-foreground mx-auto mt-4 max-w-[400px] text-center text-base text-pretty sm:mt-6 sm:text-lg md:text-xl"
  >
    A free, open source daily journal built with simplicity and privacy in mind.
  </p>

  <!-- Buttons -->
  <div class="mt-8 flex flex-col gap-3 sm:mt-10 sm:flex-row sm:gap-4">
    <Button>
      <a
        href="https://www.github.com/davidglassman/journaler/releases"
        target="_blank"
        class="flex flex-row items-center justify-center gap-2 text-neutral-500"
      >
        <Icon
          name="mdi:download"
          class="size-4 text-white dark:text-neutral-900"
        />
        <p class="text-white dark:text-neutral-900">Download</p></a
      >
    </Button>

    <Button variant="outline">
      <a
        href="https://www.github.com/davidglassman/journaler"
        target="_blank"
        class="flex flex-row items-center justify-center gap-2 text-neutral-500"
      >
        <Icon
          name="mdi:github"
          class="size-4 text-neutral-900 dark:text-white"
        />
        <p class="text-neutral-900 dark:text-neutral-200">View on GitHub</p></a
      >
    </Button>
  </div>

  <!-- Platforms -->
  <div class="mt-8 flex flex-col items-center gap-3">
    <div class="flex items-center gap-6">
      <Icon
        name="mdi:apple"
        class="text-muted-foreground h-5 w-5"
      />

      <Icon
        name="mdi:microsoft-windows"
        class="text-muted-foreground h-5 w-5"
      />

      <Icon
        name="simple-icons:linux"
        class="text-muted-foreground h-5 w-5"
      />
    </div>

    <p class="text-muted-foreground text-sm">Available for Mac, Windows & Linux</p>
  </div>
</div>
