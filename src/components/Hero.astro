---
import { Button } from '@/components/ui/button';
import { Icon } from 'astro-icon/components';
---

<div class="flex w-[70rem] flex-col items-center justify-start">
  <div
    class="bg-primary/10 text-primary mb-6 rounded-full px-4 py-2 text-center text-xs font-medium tracking-wider uppercase">
    Free & Open Source
  </div>

  <h1
    class="text-foreground text-4xl font-bold tracking-tight md:text-5xl lg:text-[64px] lg:leading-[1.1]">
    Where Your Days Go
  </h1>

  <p
    class="text-muted-foreground mx-auto mt-6 max-w-[600px] text-center text-lg text-pretty md:text-xl">
    A free, open source daily journal that stays out of your way. Your words, your files, your
    privacy.
  </p>

  <div class="mt-10 flex flex-row gap-4">
    <Button>
      <a
        href="https://www.github.com/davidglassman/journaler-private/releases"
        target="_blank"
        class="flex flex-row items-center justify-center gap-2 text-neutral-500">
        <Icon
          name="mdi:download"
          class="size-4 text-white dark:text-neutral-900"
        />
        <p class="text-white dark:text-neutral-900">Download</p></a
      >
    </Button>

    <Button variant="outline">
      <a
        href="https://www.github.com/davidglassman/journaler-private"
        target="_blank"
        class="flex flex-row items-center justify-center gap-2 text-neutral-500">
        <Icon
          name="mdi:github"
          class="size-4 text-neutral-900 dark:text-white"
        />
        <p class="text-neutral-900 dark:text-neutral-200">View on GitHub</p></a
      >
    </Button>
  </div>

  <div class="mt-8 flex flex-col items-center gap-3">
    <div class="flex items-center gap-6">
      <Icon
        name="mdi:apple"
        class="text-muted-foreground h-5 w-5"
      />
      <Icon
        name="mdi:microsoft-windows"
        class="text-muted-foreground h-5 w-5"
      />
      <Icon
        name="simple-icons:linux"
        class="text-muted-foreground h-5 w-5"
      />
    </div>
    <p class="text-muted-foreground text-sm">Available for Mac, Windows & Linux</p>
  </div>
</div>
